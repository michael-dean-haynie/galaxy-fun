//////////////////////////////////////////////////////////////////
// VARIABLES
//////////////////////////////////////////////////////////////////

trigger unitIsCreatedTrig;

// Screen Button Triggers
trigger showHideSBTrig;
trigger terranSBTrig;
trigger zergSBTrig;
trigger protossSBTrig;

//////////////////////////////////////////////////////////////////
// FUNCTIONS
//////////////////////////////////////////////////////////////////

void unitIsCreatedTrig_Init () {
    unitIsCreatedTrig = TriggerCreate("unitIsCreatedTrig_Func");
    TriggerAddEventUnitCreated(unitIsCreatedTrig, null, null, null);
}

bool unitIsCreatedTrig_Func (bool testConds, bool runActions) {
    if (!runActions) {
        return true;
    }

    hotkeys_onUnitIsCreated(EventUnitCreatedUnit(), EventUnitCreatedAbil());

    return true;
}

//////////////////////////////////////////////////////////////////

void showHideSBTrig_Init () {
    showHideSBTrig = TriggerCreate("showHideSBTrig_Func");
}

bool showHideSBTrig_Func (bool testConds, bool runActions) {
    dbg("toggling ui");
    return true;
}

//////////////////////////////////////////////////////////////////

void terranSBTrig_Init () {
    terranSBTrig = TriggerCreate("terranSBTrig_Func");
}

bool terranSBTrig_Func (bool testConds, bool runActions) {
    PlayerSetRace(1, "Terr");
    PromptUserForBuildStructureHotkey(TERRAN_RACE);
    return true;
}

//////////////////////////////////////////////////////////////////

void zergSBTrig_Init () {
    zergSBTrig = TriggerCreate("zergSBTrig_Func");
}

bool zergSBTrig_Func (bool testConds, bool runActions) {
    PlayerSetRace(1, "Zerg");
    PromptUserForBuildStructureHotkey(ZERG_RACE);
    return true;
}

//////////////////////////////////////////////////////////////////

void protossSBTrig_Init () {
    protossSBTrig = TriggerCreate("protossSBTrig_Func");
}

bool protossSBTrig_Func (bool testConds, bool runActions) {
    PlayerSetRace(1, "Prot");
    PromptUserForBuildStructureHotkey(PROTOSS_RACE);
    return true;
}

//////////////////////////////////////////////////////////////////
// SCRIPT INIT
//////////////////////////////////////////////////////////////////

void triggers_init() {
    unitIsCreatedTrig_Init();

    // Screen Button Triggers
    showHideSBTrig_Init();
    terranSBTrig_Init();
    zergSBTrig_Init();
    protossSBTrig_Init();
}