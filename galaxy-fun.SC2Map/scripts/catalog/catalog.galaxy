void ct__init() {
    // do nothing
}

string ct__raceId(int raceInt) {
    if (raceInt == 0) {
        return "Terr";
    }
    if (raceInt == 1) {
        return "Zerg";
    }
    if (raceInt == 2) {
        return "Prot";
    }
    return null;
}

int ct__raceInt(string raceId) {
    if (raceId == "Terr") {
        return 0;
    }
    if (raceId == "Zerg") {
        return 1;
    }
    if (raceId == "Prot") {
        return 2;
    }
    return -1;
}