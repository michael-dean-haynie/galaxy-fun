void sb__init () {
    libNtve_gf_DisplayScreenButton(sb__showHideBtn, StringToText("Show/Hide UI"), 250, 60, c_anchorBottomLeft, 20, 380 + (60 * 0), tr__showHideSB);

    libNtve_gf_DisplayScreenButton(sb__stopBtn, StringToText("Stop/Reset"), 250, 60, c_anchorBottomLeft, 20, 380 + (60 * 1), tr__stopSB);
    libNtve_gf_HideScreenButton(false, sb__stopBtn);
}

void sb__onClickStopBtn() {
    if (dg__trainingArea == dg__trainingAreaHotkeys) {
        if (dg_hk__hotkeyMode == dg_hk__hotkeyModeStructures) {
            libNtve_gf_HideScreenButton(false, sb__stopBtn);
            hk_st__stop();
        }
        if (dg_hk__hotkeyMode == dg_hk__hotkeyModeProduction) {
            libNtve_gf_HideScreenButton(false, sb__stopBtn);
            hk_pd__stop();
        }
        if (dg_hk__hotkeyMode == dg_hk__hotkeyModeUpgrades) {
            libNtve_gf_HideScreenButton(false, sb__stopBtn);
            hk_ug__stop();
        }
        if (dg_hk__hotkeyMode == dg_hk__hotkeyModeAbilities) {
            libNtve_gf_HideScreenButton(false, sb__stopBtn);
            hk_ab__stop();
        }
    }
}

